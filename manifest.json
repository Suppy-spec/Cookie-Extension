{
  "manifest_version": 3,
  "name": "Clear Site Cookies",
  "version": "1.0",
  "description": "Clear cookies for the current site with one click.",
  "permissions": ["cookies", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
